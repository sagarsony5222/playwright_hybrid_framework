<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Regression Suite" verbose="1" parallel="classes" thread-count="3">
    <listeners>
        <listener class-name="listeners.TestListener"/>
        <listener class-name="listeners.AnnotationTransformer"/>
    </listeners>

    <parameter name="browser" value="chromium"/>

    <test name="Regression - Web">
        <classes>
            <class name="tests.web.LoginTest"/>
            <class name="tests.web.HomeTest"/>
        </classes>
    </test>

    <test name="Regression - API">
        <classes>
            <class name="tests.api.APITest"/>
        </classes>
    </test>
</suite>
